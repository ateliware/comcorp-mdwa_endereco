<%- 
@entity = MDWA::DSL.entity('Endereco') 
@model = @entity.generator_model 
-%>
<table class="list">
  <thead>
      <th class="list_show"><%%= t 'system.index_id' %></th>
      <th class="list_edit"><%%= t 'system.index_edit' %></th>
      <th><%%= t 'enderecos.index_rua' %></th>
      <th><%%= t 'enderecos.index_numero' %></th>
      <th><%%= t 'enderecos.index_cep' %></th>
      <th><%%= t 'enderecos.index_complemento' %></th>
      <th><%%= t 'enderecos.index_bairro' %></th>
      <th class="list_remove"><%%= t 'system.index_remove' %></th>
  </thead>

<%% @enderecos.each do |endereco| %>
  <tr class="<%%= cycle 'odd_line', 'even_line' %>" >
    <td>
		<%%= link_to endereco.id, a_endereco_path(endereco) , :class => 'lightbox various fancybox.ajax' %>
	</td>
  	<td>
		<%%= link_to t('system.index_edit_label'), edit_a_endereco_path(endereco) , :class => 'lightbox various fancybox.ajax' %>
	</td>
	<td>
		<%%= endereco.rua %>
	</td>
	<td>
		<%%= endereco.numero %>
	</td>
	<td>
		<%%= endereco.cep %>
	</td>
	<td>
		<%%= endereco.complemento %>
	</td>
		
    <td>
        <%%= endereco.bairro %>
    </td>
    <td>
		<%%= link_to t('system.index_remove_label'), endereco, :method => :delete, :remote => true, :data => {:confirm => t('system.index_confirm_deletion')} %>
	</td>
  </tr>
<%% end %>
</table>

<%%= pagination_footer @enderecos %>